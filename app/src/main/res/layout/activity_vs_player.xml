<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".VsPlayerActivity">

    <ImageView
        android:id="@+id/iv_vsplayer_logo"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iv_vsplayer_cancel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toEndOf="@+id/iv_vsplayer_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_vsplayer_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pemain 1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/teal_700"
        app:layout_constraintBottom_toTopOf="@+id/iv_vsplayer_batu"
        app:layout_constraintEnd_toEndOf="@+id/iv_vsplayer_batu"
        app:layout_constraintStart_toStartOf="@+id/iv_vsplayer_batu" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="136dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P1 :"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/iv_player"
        app:layout_constraintEnd_toEndOf="@+id/iv_player"
        app:layout_constraintStart_toStartOf="@+id/iv_player" />

    <ImageView
        android:id="@+id/iv_player"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_vsplayer_batu"
        app:layout_constraintStart_toEndOf="@+id/iv_vsplayer_batu"
        app:layout_constraintTop_toTopOf="@+id/iv_vsplayer_batu" />

    <ImageView
        android:id="@+id/iv_vs"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/vs"
        app:layout_constraintBottom_toBottomOf="@+id/iv_vsplayer_kertas"
        app:layout_constraintStart_toEndOf="@+id/iv_vsplayer_kertas"
        app:layout_constraintTop_toTopOf="@+id/iv_vsplayer_kertas"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P2:"
        android:textSize="20dp"
        android:textStyle="bold
"
        app:layout_constraintEnd_toEndOf="@+id/iv_com"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/iv_com"
        app:layout_constraintTop_toBottomOf="@+id/iv_com" />

    <ImageView
        android:id="@+id/iv_com"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_vsplayer_gunting"
        app:layout_constraintStart_toEndOf="@+id/iv_vsplayer_gunting"
        app:layout_constraintTop_toTopOf="@+id/iv_vsplayer_gunting"
        app:layout_constraintVertical_bias="0.475" />


    <ImageView
        android:id="@+id/iv_player_refresh"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/refresh"
        app:layout_constraintEnd_toEndOf="@+id/iv_vsplayer_gunting1"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/iv_vsplayer_gunting1"
        app:layout_constraintTop_toBottomOf="@+id/iv_vsplayer_gunting1" />

    <ImageView
        android:id="@+id/iv_vsplayer_gunting"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/gunting"
        app:layout_constraintEnd_toEndOf="@+id/iv_vsplayer_kertas"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/iv_vsplayer_kertas"
        app:layout_constraintTop_toBottomOf="@+id/iv_vsplayer_kertas" />

    <ImageView
        android:id="@+id/iv_vsplayer_batu"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/batu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <ImageView
        android:id="@+id/iv_vsplayer_kertas"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/kertas"
        app:layout_constraintEnd_toEndOf="@+id/iv_vsplayer_batu"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/iv_vsplayer_batu"
        app:layout_constraintTop_toBottomOf="@+id/iv_vsplayer_batu" />

    <ImageView
        android:id="@+id/iv_vsplayer_batu1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="172dp"
        android:src="@drawable/batu"
        app:layout_constraintBottom_toBottomOf="@+id/iv_vsplayer_batu"
        app:layout_constraintStart_toEndOf="@+id/iv_vsplayer_batu"
        app:layout_constraintTop_toTopOf="@+id/iv_vsplayer_batu"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pemain 2"
        android:textColor="@color/teal_700"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/iv_vsplayer_batu1"
        app:layout_constraintEnd_toEndOf="@+id/iv_vsplayer_batu1"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="@+id/iv_vsplayer_batu1" />

    <ImageView
        android:id="@+id/iv_vsplayer_kertas1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/kertas"
        app:layout_constraintEnd_toEndOf="@+id/iv_vsplayer_batu1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/iv_vsplayer_batu1"
        app:layout_constraintTop_toBottomOf="@+id/iv_vsplayer_batu1" />

    <ImageView
        android:id="@+id/iv_vsplayer_gunting1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/gunting"
        app:layout_constraintEnd_toEndOf="@+id/iv_vsplayer_kertas1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/iv_vsplayer_kertas1"
        app:layout_constraintTop_toBottomOf="@+id/iv_vsplayer_kertas1" />

</androidx.constraintlayout.widget.ConstraintLayout>