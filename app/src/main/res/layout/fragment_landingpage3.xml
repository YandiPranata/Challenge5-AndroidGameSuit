<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.landing_page3.landingpage3Fragment">

    <ImageView
        android:id="@+id/iv_lp3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="116dp"
        android:src="@drawable/landing_page3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_lp3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tuliskan namamu dibawah"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/iv_lp3"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/et_lp3"
        android:layout_width="263dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Your Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/tv_lp3"
        app:layout_constraintStart_toStartOf="@+id/tv_lp3"
        app:layout_constraintTop_toBottomOf="@+id/tv_lp3" />

    <ImageView
        android:id="@+id/iv_lp3_play"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="45dp"
        android:src="@drawable/ic_arrow"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_lp3"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/et_lp3"
        app:layout_constraintTop_toBottomOf="@+id/et_lp3"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>